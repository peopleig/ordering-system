<%- include("../public/partials/head.ejs", { title: "Login", CSSFile: "/login/style.css" }) %>
<body data-error="<%= error %>">
<%- include("../public/partials/navbar.ejs") %>
    <div id="wrapper">
        <div id="cover">
            <form action="/login" method="POST" class="container mt-5" style="max-width: 400px;">
                <h3 class="text-center mb-4"><b>LOGIN</b></h3>
                <div class="mb-3">
                    <label class="form-label d-block">Login with:</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="login_type" id="mobile_option" value="mobile" checked>
                        <label class="form-check-label" for="mobile_option">Mobile Number</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="login_type" id="email_option" value="email">
                        <label class="form-check-label" for="email_option">Email ID</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="identifier" class="form-label">Mobile Number or Email</label>
                    <input type="text" class="form-control" id="identifier" name="identifier" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>

        </div>
    </div>
    <div class="position-fixed bottom-0 end-0 p-3">
        <div id="error_msg_toast" class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    Invalid credentials. Please try again!
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

<%- include("../public/partials/footer") %>
<script src="/login/script.js"></script>
</body>
</html>